<form action="/updatedata" method="post" >
    <input type="hidden" name="edit_id" value="<%= single.id %>">
    <table border="1">
        <tr>
            <td>Name:</td>
            <td><input type="text" value="<%= single.name %>" name="name"></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input type="text" value="<%= single.email %>" name="email"></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="password" value="<%= single.password %>" name="password"></td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td><input type="text" value="<%= single.phone %>" name="phone"></td>
        </tr>
        <tr>
            <td>City:</td>
            <td><input type="text" value="<%= single.city %>" name="city"></td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td>
                <input type="radio" <% if(single.gender =="male") {   %>  checked   <% } %>  value="male" name="gender"/>Male
                <input type="radio" <% if(single.gender == "female") { %> checked <% } %> value="female" name="gender"/>Female   
            </td>
        </tr>
        <tr>
            <td>Hobby:</td>
            <td>
                <input type="checkbox" value="cricket" name="hobby"/>Cricket
                <input type="checkbox" value="music" name="hobby"/>Music
                <input type="checkbox" value="gaming" name="hobby"/>Gaming
            </td>
        </tr>
        <tr>
            <td>State : </td>
            <td>
                <select name="state">
                    <option value="">---Select state----</option>

                    <% let state = ["gujarat","Maharashtra","Rajasthan","punjab"];
                    
                        for(let i in state) {
                    %>
                            <option <% if(single.state == state[i]) { %> selected <% } %> value="<%= state[i] %>"><%= state[i] %></option>
                    <% } %>

                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="submit"></td>
        </tr>
    </table>
</form>
